<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#c85e7974" />
            <gradient android:angle="-90" android:startColor="#c8345953" android:endColor="#c8689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#c8345953" />
            <solid android:color="#c85e7974"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#c85e7974" />
            <gradient android:angle="-90" android:startColor="#94E0E9" android:endColor="#C883DD91" />
        </shape>
    </item>
</selector>