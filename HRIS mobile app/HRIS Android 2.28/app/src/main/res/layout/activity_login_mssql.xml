<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView20"
                style="@android:style/Widget.DeviceDefault.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:gravity="center"
                android:paddingBottom="35dp"
                android:text="Sync Data with MSSQL DB"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="28sp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView20"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgView_logo"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="35dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kasuninfinityicon2" />

                <EditText
                    android:id="@+id/edtuserid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textboxdesign"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="User Name"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:textSize="18sp" />

                <EditText
                    android:id="@+id/edtpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/textboxdesign"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:textSize="18sp" />

                <Button
                    android:id="@+id/btnlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="46dp"
                    android:layout_marginRight="46dp"
                    android:background="@drawable/btn_round"
                    android:text="Test Connection"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    tools:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/pbbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:indeterminateTint="#bcbcbc"
                    android:paddingTop="55dp" />

                <TextView
                    android:id="@+id/tv_Mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pbbar"
                    android:layout_marginTop="55dp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="10dp"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/botomlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout2">

            <EditText
                    android:id="@+id/edMac"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/textboxdesign"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="Register ID"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnSetM"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/makefg" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>